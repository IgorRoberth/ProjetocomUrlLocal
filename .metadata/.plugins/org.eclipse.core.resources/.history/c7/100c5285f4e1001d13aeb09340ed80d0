package browsers;

import org.junit.BeforeClass;
import org.junit.Test;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

public class Navegadores {

	private static WebDriver driverChrome;
	private static WebDriver driverFirefox;
	private static WebDriver driverSafari;

	@BeforeClass
	public static void configurarDrivers() {
		// Configurar o driver do Chrome
		System.setProperty("webdriver.chrome.driver", "C:/meu-projeto/chromedriver.exe");
		driverChrome = new ChromeDriver();

		// Configurar o driver do Firefox
		System.setProperty("webdriver.gecko.driver", "C:/meu-projeto/geckodriver.exe");
		driverFirefox = new FirefoxDriver();

		// Configurar o driver do Safari
		driverSafari = new SafariDriver();
	}

	@Test
	public void testarNavegadores() {
		// Navegar para a URL configurada
		String url = Configuracao.getURL();
		driverChrome.get(url);
		driverFirefox.get(url);
		driverSafari.get(url);

		// Realizar outras operações de teste nos navegadores
		// ...
	}
}