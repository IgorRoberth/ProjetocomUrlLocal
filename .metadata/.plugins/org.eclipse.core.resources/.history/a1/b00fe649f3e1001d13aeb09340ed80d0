package browsers;

import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStream;
import java.util.Properties;

public class Navegadores {

	    private static Properties propriedades;
	    public static String URL;
	    public static String CHROME_DRIVER;
	    public static String FIREFOX_DRIVER;
	    public static String EDGE_DRIVER;

	    static {
	        propriedades = new Properties();
	        try {
	            InputStream entrada = new FileInputStream("C:\\Users\\igorr\\AutomaticComplex\\config.properties");
	            propriedades.load(entrada);
	            URL = propriedades.getProperty("url");
	            CHROME_DRIVER = propriedades.getProperty("C:\\Driver\\chromedriver.exe");
	            FIREFOX_DRIVER = propriedades.getProperty("C:\\Drivers\\geckodriver.exe");
	            EDGE_DRIVER = propriedades.getProperty("");
	        } catch (IOException e) {
	            e.printStackTrace();
	        }
	    }
	}